	<div class="container-fluid" id="sec{{ section.id }}">
		<div class="row">
			<div class="container">
               {% if section.settings.title != blank %}
     {%- assign collection = collections[section.settings.collection] -%}
              {%- assign product_limit = section.settings.grid | times: section.settings.rows -%}
              <h2 class="section_title xza"><a href="{{collection.url}}">{{ section.settings.title | escape }}</a></h2>
   
  {% endif %}
				  {%- assign collection = collections[section.settings.collection] -%}
              {%- assign product_limit = section.settings.grid  -%}
				<div class="category_wrap homaa">
                  {% assign dTotalnumber = 0 %}
                  {% for product in collection.products limit: product_limit %}
                  {% assign dTotalnumber = dTotalnumber | plus: 1 %}
                  {% include 'product-grid-item' %}
 
                   {% else %}
                   {% for i in (1..product_limit) %}
       
                  <div class="category_inner">
						<div class="category_img">
							<a href="javascript:;">
								{{ 'product-1'  | placeholder_svg_tag: 'placeholder-svg' }}
							</a>
						</div>
						<div class="category_detail">
							<h4><a href="javascript:;">Never Underestimate An Old Dude With a Surfboard Hoodie</a></h4>
							<h5>$14.00</h5>
							<div class="star-rating">
								<span class="fa fa-star rating"></span>
								<span class="fa fa-star rating"></span>
								<span class="fa fa-star rating"></span>
								<span class="fa fa-star"></span>
								<span class="fa fa-star"></span>
								<span class="rating-review">( 3 reviews )</span>
							</div>
						</div>
					</div>
      {% endfor %}
                  
                  {% endfor %}
				 
				</div>
              <div class="grid__item one-whole text-center"><a class="btn btn--see-more" href="{{collection.url}}">Ver todo</a></div>
			</div>
		</div>
	</div>

{% if dTotalnumber <= 5 %}
        <style>
          @media screen and (min-width:992px){
          #sec{{ section.id }} .owl-nav {
            display: none !important;
          }
          }
        </style>
        {% endif %}
